@model IEnumerable<AspNetMvcDemo.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Asiakkaat, staattinen tapa</h2>

<p>Kontrollerista tullutta tietoa: <strong>@ViewBag.OmaTieto</strong>.</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Asiakas-id</th>
            <th>Nimi</th>
            <th>Osoite</th>
            <th>Kaupunki</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AspNetMvcDemo.Models.Customer cust in Model)
        {
            <tr>
                <td>@cust.CustomerID</td>
                <td>@cust.CompanyName</td>
                <td>@cust.Address</td>
                <td>@cust.City</td>
            </tr>
        }
    </tbody>
</table>

<p>Asiakkaita yhteensä: @Model.Count().</p>